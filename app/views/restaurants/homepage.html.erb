<p id="notice"><%= notice %></p>
<div id="restaurante">
  <% @restaurants.each do |restaurant| %>
    <h1 class="nome"><%= restaurant.name %></h1>
    <h2 class="endereco"><%= restaurant.address %></h2>
    <h2 class="telefone">Telefone: <%= restaurant.telephone %></h2>
  <% end %>
</div>

<div id="dish">
  <ul class="dishes_itens">
    <% @dishes.each do | dish| %>
      <li class="dish_item">

        <div class="titulo">
          <div class="descricao"><%= dish.description %></div>
          <div class="preco">R$ <b><%= dish.price %>0</b></div>
        </div>

        <div class="info">
          <div class="ingredientes">Ingredientes:
            <span><br/>
              <!--%= plate.ingredients.map(&:descricao).join(',') %-->
                 <ul>
                    <% plate.ingredients.order(:description).each do | ingredient| %>
                    <li><%= ingredient.description%></li>
                    <% end %>
                 </ul>
                 </span>
          </div>

          <div class="tempopreparo"><b>Tempo de Preparo:</b> <%= dish.preparationtime.strftime("%I:%M") %>h</div>
        </div>
        <div class="fotos">FOTO</div>
        <!--div class="ingredientes">Ingredients: <!--%= plate.ingredients.sort_by { |h | h[:descricao] } %></div-->
      </li>
    <% end %>
  </ul>
</div>